<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_inherit_sale_purchase_dropship" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.sale.purchase.dropship</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_term_id']" position="after">
                <field name="sale_linked_purchase_order_id" readonly="1" groups="purchase.group_purchase_user"
                       invisible="purchase_order_count == 0"/>
            </xpath>
        </field>
    </record>
</odoo>
