<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_inherit_sale_purchase_dropship" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.sale.purchase.dropship</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='dest_address_id']" position="after">
                <field name="partner_sale_order_id" readonly="1" groups="sales_team.group_sale_salesman"
                       invisible="sale_order_count == 0"/>
            </xpath>
        </field>
    </record>
</odoo>