<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sale_purchase_wizard_form" model="ir.ui.view">
        <field name="name">sale.purchase.wizard.form</field>
        <field name="model">sale.purchase.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="sale_id" invisible="1"/>
                        </group>
                        <group>
                            <field name="delivery_date" required="1"/>
                            <field name="vendor_delivery_date" required="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Product Line">
                            <field name="sale_purchase_wizard_line_ids">
                                <tree>
                                    <field name="product_id"/>
                                    <field name="quantity"/>
                                </tree>
                            </field>
                        </page>
                        <page string="Notes">
                            <group>
                                <field name="sale_notes"/>
                                <field name="purchase_notes"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button string="Confirm" class="oe_highlight" type="object" name="action_confirm"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- Action for res.partner.extended -->
    <record id="action_sale_purchase_wizard" model="ir.actions.act_window">
        <field name="name">Sale Purchase Wizard</field>
        <field name="res_model">sale.purchase.wizard</field>
        <field name="view_mode">form</field>
    </record>
</odoo>

